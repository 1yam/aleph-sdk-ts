{
  "compilerOptions": {
    "module": "CommonJS",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "target": "ES6",
    "esModuleInterop": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests"]
}
